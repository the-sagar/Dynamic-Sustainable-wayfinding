{
  "compilerOptions": {
    "allowJs": true,
    "noImplicitAny": true,
    "target": "es2017",
    "allowSyntheticDefaultImports": true,
    "jsx": "react-native",
    "lib": ["dom", "esnext"],
    "moduleResolution": "node",
    "noEmit": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strict": true,
    "baseUrl": "src"
  }
}
